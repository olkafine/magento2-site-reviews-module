<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="site_review" translate="label" type="text" sortOrder="10" showInDefault="1">
            <label>Site Review</label>
            <tab>lendiel</tab>
            <resource>Lendiel_SiteReview::module</resource>
            <group id="configuration" translate="label" type="text" sortOrder="10" showInDefault="1">
                <label>General Settings</label>
                <field id="enable_module" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
